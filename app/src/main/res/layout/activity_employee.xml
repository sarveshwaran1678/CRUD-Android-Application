<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    android:background="#47535E"
    tools:context=".EmployeeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/personID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Person ID*"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Company ID (required)"
                android:textSize="17dp"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                android:paddingLeft="5dp"/>

            <Spinner
                android:id="@+id/companyID_person"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:inputType="number"
                android:spinnerMode="dialog"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                android:background="#fff"
                android:hint="Company ID (required)"/>



            <EditText
                android:id="@+id/personName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Full Name(required)"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Title"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                />

            <EditText
                android:id="@+id/linkedln_url_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Linkedln URL (required)"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                />
            <EditText
                android:id="@+id/email_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Email (required)"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                />
            <EditText
                android:id="@+id/job_func"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job Function"
                android:textColor="#fff"
                android:textColorHint="#EAF0F1"
                />



            <Button
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:layout_marginBottom="2dp"
                android:textColor="#fff"
                android:text="Add Data" />

            <Button
                android:id="@+id/button_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#fff"
                android:background="#10A881"
                android:layout_marginBottom="2dp"
                android:text="View" />

            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#fff"
                android:background="#F3B431"
                android:layout_marginBottom="2dp"
                android:text="Update" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#fff"
                android:layout_marginBottom="2dp"

                android:background="#E44236"
                android:text="Delete" />

            <Button
                android:id="@+id/button_viewAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginBottom="15dp"

                android:background="#E74292"
                android:text="View All" />

            <Button
                android:id="@+id/button_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginBottom="2dp"

                android:background="#2B2B52"

                android:text="Company Page" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="*Person ID is Auto-Incremented and is only used for updating,viewing and deleting."
                android:layout_below="@id/comp_linkedln_url"
                android:textColor="#fff"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
